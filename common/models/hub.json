{
  "name": "Hub",
  "replaceOnPUT": false,
  "base": "PersistedModel",
  "strictDelete": true,
  "idInjection": true,
  "options": {
    "validateUpsert": true,
    "strict":"filter"
  },
  "mixins": {
    "DisableCommon": true,
    "SphereContent": true,
    "ChangeTracker": false,
    "TimeStamps": {
      "required": false,
      "validateUpsert": true
    },
    "Util": true
  },
  "hidden": [
    "token"
  ],
  "properties": {
    "token": {
      "type": "string",
      "required": true
    },
    "name": {
      "type": "string"
    },
    "sphereId": {
      "type": "string",
      "default": true
    },
    "localIPAddress": {
      "type": "string"
    },
    "externalIPAddress": {
      "type": "string"
    },
    "lastSeen": {
      "type": "date"
    },
    "state": {
      "type": "string"
    }
  },
  "validations": [],
  "relations": {
    "sphere": {
      "type": "belongsTo",
      "model": "Sphere",
      "foreignKey": "sphereId"
    },
    "accessTokens": {
      "type": "hasMany",
      "model": "CrownstoneAccessToken",
      "polymorphic": {
        "foreignKey": "userId",
        "discriminator": "principalType"
      },
      "options": {
        "disableInclude": true
      }
    },
    "linkedStoneId": {
      "type": "belongsTo",
      "model": "Stone",
      "foreignKey": "linkedStoneId"
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW"
    }
  ],
  "methods": {}
}
